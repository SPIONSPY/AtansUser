?>
<tr id="role-<?php echo $this->escapeHtmlAttr($role->getId()) ?>" data-id="<?php echo $this->escapeHtmlAttr($role->getId()) ?>">
    <td>
        <?php echo $this->escapeHtml($role->getId()) ?>
    </td>
    <td>
        <?php echo $this->escapeHtml($role->getName()) ?>
    </td>
