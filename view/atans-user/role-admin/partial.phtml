        <div class="btn-group">
            <a class="btn" href="<?php echo $this->url('zfcadmin/role/edit', array('id' => $role->getId())) ?>">
                <i class="icon-edit"></i>
            </a>
            <a class="btn" href="<?php echo $this->url('zfcadmin/role/delete', array('id' => $role->getId())) ?>">
