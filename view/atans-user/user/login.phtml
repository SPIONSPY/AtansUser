<?php
$title = $this->translate('用戶登入');
$this->headTitle($title);

$form = $this->form;
$form->setAttribute('action', $this->url('atansuser/login'));
$form->setAttribute('class', 'form-horizontal');
?>

<?php if (!is_null($error)) : ?>
<div class="alert alert-warning">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
    <?php echo $error ?>
</div>
<?php endif ?>

<h3><?php echo $this->escapeHtml($title) ?></h3>

<hr>

<?php echo $this->form()->openTag($form) ?>

    <?php
    $username = $form->get('username');
    $usernameMessages = $username->getMessages();
    ?>
    <div class="form-group <?php echo ($usernameMessages ? ' has-error':'')?>">
        <div class="control-label col-lg-3 col-md-3 col-sm-3">
            <?php echo $this->translate('用戶') ?>
        </div>
        <div class="col-lg-4 col-md-4 col-sm-4">
            <?php echo $this->formInput($username) ?>
            <?php if ($usernameMessages): ?>
            <div class="help-block">
                <?php echo implode(', ', $usernameMessages) ?>
            </div>
            <?php endif ?>
        </div>
    </div>

    <?php
    $password = $form->get('password');
    $passwordMessages = $password->getMessages();
    ?>
    <div class="form-group <?php echo ($usernameMessages ? ' has-error':'')?>">
        <div class="control-label col-lg-3 col-md-3 col-sm-3">
            <?php echo $this->translate('密碼') ?>
        </div>
        <div class="col-lg-4 col-md-4 col-sm-4">
            <?php echo $this->formPassword($password) ?>
            <?php if ($passwordMessages): ?>
            <div class="help-block">
                <?php echo implode(', ', $passwordMessages) ?>
            </div>
            <?php endif ?>
        </div>
    </div>
    <hr>
    <div class="form-group">
        <div class="col-lg-offset-3 col-lg-4 col-md-offset-3 col-md-4 col-lg-sm-3 col-sm-4">
            <button class="btn btn-primary btn-large" type="submit">
                <?php echo $this->translate('登入') ?>
            </button>
        </div>
    </div>

<?php echo $this->form()->closeTag() ?>
